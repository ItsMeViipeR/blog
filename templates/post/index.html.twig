{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}

    {% for flash in app.flashes('success') %}
        <div role="alert" class="rounded-xl border border-gray-100 bg-white p-4">
            <div class="flex items-start gap-4">
            <span class="text-green-600">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </span>

                <div class="flex-1">
                    <strong class="block font-medium text-gray-900">Succ√®s !</strong>

                    <p class="mt-1 text-sm text-gray-700">
                        {{ flash }}
                    </p>
                </div>

                <button class="text-gray-500 transition hover:text-gray-600">
                    <span class="sr-only">Dismiss popup</span>

                    <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="h-6 w-6"
                    >
                        <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M6 18L18 6M6 6l12 12"
                        />
                    </svg>
                </button>
            </div>
        </div>
    {% endfor %}

    <div class="flex justify-center items-center p-6">
        <div class="grid grid-cols-2 gap-5 container">
            {% for post in posts %}
                <article class="hover:animate-background rounded-xl bg-gradient-to-r from-green-300 via-blue-500 to-purple-600 p-0.5 shadow-xl transition hover:bg-[length:400%_400%] hover:shadow-sm hover:[animation-duration:_4s]">
                    <div class="rounded-[10px] bg-white p-4 !pt-20 sm:p-6">
                        <a href="#">
                            <h3 class="mt-0.5 text-lg font-medium text-gray-900">
                                {{ post.title }}
                            </h3>
                        </a>

                        <div class="mt-4 flex flex-wrap gap-1">
                            <span class="whitespace-nowrap rounded-full bg-purple-100 px-2.5 py-0.5 text-xs text-purple-600">
                                {{ post.category.name }}
                            </span>
                        </div>
                    </div>
                </article>
            {% endfor %}

        </div>
    </div>
{% endblock %}
